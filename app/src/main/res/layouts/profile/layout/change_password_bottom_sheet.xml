<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/thay_doi_mat_khau"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp_50" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@color/color_line_divider_light" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="@string/mat_khau_hien_tai" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tip_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edt"
                    android:layout_marginTop="@dimen/toolbar_half_padding_horizontal"
                    android:background="@drawable/bg_boder_gray"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ic_password_toggle"
                    app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/dp_48"
                        android:drawableStart="@drawable/ic_login_matkhau"
                        android:drawablePadding="@dimen/toolbar_half_padding_horizontal"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/input_matkhau"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/toolbar_half_padding_horizontal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="@string/mat_khau_moi" />

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edt"
                    android:layout_marginTop="@dimen/toolbar_half_padding_horizontal"
                    android:background="@drawable/bg_boder_gray"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ic_password_toggle"
                    app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/dp_48"
                        android:drawableStart="@drawable/ic_login_matkhau"
                        android:drawablePadding="@dimen/toolbar_half_padding_horizontal"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/input_matkhau"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/toolbar_half_padding_horizontal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="@string/nhap_lai_mat_khau_moi" />

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edt"
                    android:layout_marginTop="@dimen/toolbar_half_padding_horizontal"
                    android:background="@drawable/bg_boder_gray"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ic_password_toggle"
                    app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_new_password_again"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_login_matkhau"
                        android:drawablePadding="@dimen/toolbar_half_padding_horizontal"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/input_matkhau"
                        android:textSize="@dimen/dp_48"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/toolbar_half_padding_horizontal" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:weightSum="2">

                <androidx.cardview.widget.CardView
                        android:id="@+id/cvTuChoi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/card_big_elevation">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_orage"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center"
                            android:padding="@dimen/toolbar_half_padding_horizontal"
                            android:text="@string/huy"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/cvDongY"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/card_big_elevation">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_pri"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center"
                            android:padding="@dimen/toolbar_half_padding_horizontal"
                            android:text="@string/dong_y"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>